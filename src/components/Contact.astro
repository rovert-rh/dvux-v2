---
const { id } = Astro.props
---

<section class="bg-black text-white" id={id}>
    <div class="py-9 flex flex-col justify-center items-center 2x:pt-10">
        <h2 class="py-8 font-extrabold text-2xl lg:text-3xl xl:text-5xl">
            Contáctanos
        </h2>
    </div>
    <div class="contact justify-center items-center text-lg">
        <div class=" flex flex-col gap-6 items-center text-1xl md:text-2xl lg:text-2xl xl:text-3xl" >
            <h2>Agenda tú cita para un nuevo comienzo</h2>
            <img class="logo-image w-60 h-auto lg:w-80 lg:h-auto xl:w-100" src="public/logoimg_4.webp" alt="logo-contact" />
            
        </div>
        <div>
            <section
            class="calendly-inline-widget mx-auto"
            data-url="https://calendly.com/bosterst3/30min"
            style="min-width:w-auto;height:580px;"
        >
        </section>
        </div>
    </div>
    <script
        type="text/javascript"
        src="https://assets.calendly.com/assets/external/widget.js"
        async></script>
</section>

<style>
    .logo-image {
        display: none;
        
        
    }
    .contact p{
        text-align: center;
        padding-bottom: 50px;
    }
    @media (min-width: 900px) {
        .logo-image {
            display: block;
        }
        .contact {
            display: grid;
            grid-template-columns: 1fr 1fr;
        }
        
    
    }
</style>
