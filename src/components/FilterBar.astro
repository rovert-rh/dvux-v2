---
interface Props {
    categories: string[];
}
const { categories } = Astro.props;
---

<div
    class="top-4 z-10 backdrop-blur-md p-4 rounded-xl shadow-lg max-w-xl mx-auto mb-12 flex flex-col md:flex-row gap-4"
>
    <input
        id="search-input"
        type="text"
        placeholder="üîç Buscar por t√≠tulo..."
        aria-label="Buscar prompts"
        class="flex-grow px-4 py-2 rounded-lg bg-gray-800 text-white placeholder-gray-400 border border-gray-700 focus:outline-none focus:border-[#41B6A1]"
    />
    <select
        id="category-select"
        class="flex-shrink-0 px-4 py-2 rounded-lg bg-gray-800 text-white border border-gray-700 focus:outline-none focus:border-[#41B6A1]"
    >
        <option value="all">Todas las categor√≠as</option>
        {
            categories.map((category) => (
                <option value={category}>{category}</option>
            ))
        }
    </select>
</div>
