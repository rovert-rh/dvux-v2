---
const { id, title, subtitle } = Astro.props;
---

<section
  class="h-screen w-screen relative overflow-hidden bg-cover bg-[url('/fondo.webp')] bg-no-repeat lg:bg-cover lg:bg-center flex items-center justify-center"
  id={id}
>
  <div class="absolute inset-0 bg-black opacity-40 lg:opacity-0"></div>
  <h1
    class="w-full text-5xl text-center xl:text-right xl:mr-96 text-white md:text-9xl relative z-10"
  >
    {title}
    <br />
    {subtitle}
  </h1>
</section>
