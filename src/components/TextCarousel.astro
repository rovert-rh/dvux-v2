<div class="text-carousel">
  <div class="text-container text-6xl">
    <p id="carousel-text">Agencia Creativa DVUX</p>
  </div>
</div>

<script>
  let phrases = [
    "Puedes crear tus ideas",
    "Una landing page",
    "Un E-commerce",
    "Una aplicaciÃ³n",
  ];
  let currentIndex = 0;

  setInterval(() => {
    currentIndex = (currentIndex + 1) % phrases.length;
    const carouselTextElement = document.getElementById("carousel-text");

    if (carouselTextElement) {
      carouselTextElement.innerText = phrases[currentIndex];
    }
  }, 10000);
</script>

